<h1>Novo jogo</h1>

<% @letters.each do |letter| %>

  <div class="letter"><%= letter %></div>

<% end %>

<form class="longest-word" action="/score" method="POST">
<label for="word">Digite a maior palavra que conseguir:</label>
<input type="text" id="word" name="word">
<%= hidden_field_tag :letters, @letters %>
<%= hidden_field_tag :initial_time, @initial_time %>
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
<input type="submit" value="Pontuação!">
